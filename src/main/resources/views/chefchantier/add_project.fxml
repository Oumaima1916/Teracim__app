<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.myapp.controller.AjouterProjetController"
            stylesheets="@chef_chantier.css"
            prefWidth="1200" prefHeight="700"
            styleClass="ajoutprojet-root">

    <!-- زر الرجوع (برا الكارتة البيضا) -->
    <Button fx:id="retourButton" text="← Retour"
            layoutX="60" layoutY="50"
            onAction="#onRetourClicked"
            styleClass="ajoutprojet-btn-retour"/>

    <!-- الكارتة البيضا ديال الفورم -->
    <VBox layoutX="80" layoutY="120"
          styleClass="ajoutprojet-card">

        <!-- العنوان -->
        <Label text="Ajouter un nouveau projet"
               styleClass="ajoutprojet-title"/>

        <!-- الفورم جوج كولونات بحال الصورة -->
        <GridPane styleClass="ajoutprojet-grid">
            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>

            <!-- Nom du projet -->
            <TextField fx:id="nomProjetField"
                       promptText="Nom du projet"
                       GridPane.rowIndex="0" GridPane.columnIndex="0"
                       styleClass="settings-input"/>

            <!-- Client -->
            <TextField fx:id="clientField"
                       promptText="Nom du client"
                       GridPane.rowIndex="1" GridPane.columnIndex="0"
                       styleClass="settings-input"/>

            <!-- Ville -->
            <TextField fx:id="villeField"
                       promptText="Ville"
                       GridPane.rowIndex="2" GridPane.columnIndex="0"
                       styleClass="settings-input"/>

            <!-- Adresse du chantier -->
            <TextField fx:id="adresseField"
                       promptText="Adresse du chantier"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"
                       styleClass="settings-input"/>

            <!-- État du projet -->
            <ComboBox fx:id="etatCombo"
                      promptText="État du projet"
                      GridPane.rowIndex="1" GridPane.columnIndex="1"
                      styleClass="settings-combo"/>

        </GridPane>

        <!-- Description تحت بوحدها -->
        <TextArea fx:id="descriptionArea"
                  promptText="Description générale du projet"
                  prefRowCount="4"
                  wrapText="true"
                  styleClass="ajoutprojet-textarea"/>

        <!-- الأزرار في الأسفل -->
        <HBox alignment="CENTER_RIGHT" spacing="12">
            <Button text="Annuler"
                    onAction="#onRetourClicked"
                    styleClass="settings-btn-danger"/>

            <Button fx:id="enregistrerButton"
                    text="Enregistrer"
                    onAction="#onEnregistrerClicked"
                    styleClass="ajoutprojet-btn-main"/>
        </HBox>

    </VBox>

</AnchorPane>
