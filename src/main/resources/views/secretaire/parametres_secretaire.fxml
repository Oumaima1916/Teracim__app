<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>
<?import javafx.collections.*?>
<?import java.lang.*?>
<?import javafx.scene.shape.Circle?>


<StackPane fx:id="rootPane" prefHeight="800.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.myapp.controller.SecretaireParametresController" stylesheets="@../style.css">

    <ImageView fitHeight="${rootPane.height}" fitWidth="${rootPane.width}" pickOnBounds="true" preserveRatio="false">
        <image><Image url="@../images/bg.png" /></image>
    </ImageView>

    <VBox spacing="0" style="-fx-background-color: rgba(0, 130, 172, 0.15);">

        <HBox alignment="CENTER_LEFT" prefHeight="80.0" spacing="45" style="-fx-padding: 0 50;">
            <Label fx:id="navAccueil" onMouseClicked="#switchToAccueil" text="Accueil" style="-fx-text-fill: white; -fx-cursor: hand; -fx-font-size: 18px; -fx-opacity: 0.8;"/>
            <Label fx:id="navMessages" onMouseClicked="#switchToMessages" text="Messages" style="-fx-text-fill: white; -fx-cursor: hand; -fx-font-size: 18px; -fx-opacity: 0.8;"/>
            <Label text="Paramètres" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18px;"/>
            <Label fx:id="navGestion" onMouseClicked="#switchToGestion" text="Gestion de comptes" style="-fx-text-fill: white; -fx-cursor: hand; -fx-font-size: 18px; -fx-opacity: 0.8;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox alignment="CENTER" spacing="15">
                <VBox alignment="CENTER_RIGHT">
                    <Label text="Sara Bennani" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                    <Label text="Secrétaire" style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 11;"/>
                </VBox>
                <StackPane>
                    <Circle radius="22" fill="white" />
                    <Label text="SB" style="-fx-text-fill: #0082AC; -fx-font-weight: bold;"/>
                </StackPane>
            </HBox>
        </HBox>

        <VBox VBox.vgrow="ALWAYS" styleClass="white-card" style="-fx-background-radius: 40; -fx-background-color: white;">
            <VBox.margin><Insets bottom="30" left="30" right="30" top="10" /></VBox.margin>
            <padding><Insets top="40" bottom="40" left="60" right="60"/></padding>

            <Label text="Paramètres du compte" style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #0082AC;"/>
            <Label text="Gérez vos informations, préférences et notifications." style="-fx-font-size: 16; -fx-text-fill: #0082AC; -fx-padding: 0 0 40 0;"/>

            <HBox spacing="50" VBox.vgrow="ALWAYS">
                <VBox spacing="20" HBox.hgrow="ALWAYS" style="-fx-background-color: #fdfaf5; -fx-padding: 30; -fx-background-radius: 25;">
                    <Label text="Informations personnelles" style="-fx-font-weight: bold; -fx-font-size: 22; -fx-text-fill: #0082AC;"/>
                    <VBox spacing="8">
                        <Label text="Nom complet :" style="-fx-text-fill: #7f8c8d; -fx-font-size: 15;"/>
                        <TextField text="Sara Bennani" style="-fx-background-radius: 12; -fx-padding: 12; -fx-background-color: white; -fx-border-color: #eee; -fx-border-radius: 12;"/>
                    </VBox>
                    <VBox spacing="8">
                        <Label text="Email :" style="-fx-text-fill: #7f8c8d; -fx-font-size: 15;"/>
                        <TextField text="s.bennani@terracim.ma" style="-fx-background-radius: 12; -fx-padding: 12; -fx-background-color: white; -fx-border-color: #eee; -fx-border-radius: 12;"/>
                    </VBox>
                    <VBox spacing="8">
                        <Label text="Téléphone :" style="-fx-text-fill: #7f8c8d; -fx-font-size: 15;"/>
                        <TextField text="+212 6 78 45 32 10" style="-fx-background-radius: 12; -fx-padding: 12; -fx-background-color: white; -fx-border-color: #eee; -fx-border-radius: 12;"/>
                    </VBox>
                    <Button text="Modifier" style="-fx-background-color: #0082AC; -fx-text-fill: white; -fx-background-radius: 15; -fx-padding: 12 40; -fx-font-weight: bold; -fx-cursor: hand;"/>
                </VBox>

                <VBox spacing="20" HBox.hgrow="ALWAYS" style="-fx-background-color: #fdfaf5; -fx-padding: 30; -fx-background-radius: 25;">
                    <Label text="Préférences &amp; Sécurité" style="-fx-font-weight: bold; -fx-font-size: 22; -fx-text-fill: #0082AC;"/>
                    <VBox spacing="8">
                        <Label text="Langue :" style="-fx-text-fill: #7f8c8d; -fx-font-size: 15;"/>
                        <ComboBox fx:id="languageComboBox" prefWidth="250" style="-fx-background-radius: 10; -fx-background-color: white;">
                            <items><FXCollections fx:factory="observableArrayList"><String fx:value="Français"/><String fx:value="العربية"/></FXCollections></items>
                            <value><String fx:value="Français"/></value>
                        </ComboBox>
                    </VBox>
                    <VBox spacing="10">
                        <Label text="Thème :" style="-fx-text-fill: #7f8c8d; -fx-font-size: 15;"/>
                        <HBox spacing="30">
                            <fx:define><ToggleGroup fx:id="themeGroup"/></fx:define>
                            <RadioButton text="Clair" toggleGroup="$themeGroup" selected="true"/><RadioButton text="Sombre" toggleGroup="$themeGroup"/>
                        </HBox>
                    </VBox>
                    <Separator style="-fx-opacity: 0.2;"/>
                    <VBox spacing="8">
                        <Label text="Ancien mot de passe :" style="-fx-text-fill: #7f8c8d; -fx-font-size: 15;"/>
                        <PasswordField promptText="Entrez votre ancien mot de passe" style="-fx-background-radius: 12; -fx-padding: 12; -fx-background-color: white; -fx-border-color: #eee; -fx-border-radius: 12;"/>
                    </VBox>
                    <VBox spacing="8">
                        <Label text="Nouveau mot de passe :" style="-fx-text-fill: #7f8c8d; -fx-font-size: 15;"/>
                        <PasswordField promptText="Entrez le nouveau mot de passe" style="-fx-background-radius: 12; -fx-padding: 12; -fx-background-color: white; -fx-border-color: #eee; -fx-border-radius: 12;"/>
                    </VBox>
                </VBox>
            </HBox>
        </VBox>
    </VBox>
</StackPane>