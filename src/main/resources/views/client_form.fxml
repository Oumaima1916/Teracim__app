<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.myapp.controller.ClientFormController">

    <children>
        <StackPane alignment="CENTER">
            <!-- الكارت الزرقاء الكبرى -->
            <StackPane maxWidth="900"
                       maxHeight="450"
                       prefWidth="800"
                       prefHeight="430"
                       styleClass="form-container">

                <!-- الكارت البيضاء لي فالداخل -->
                <VBox spacing="24"
                      alignment="TOP_CENTER"
                      styleClass="form-inner">

                    <!-- العنوان -->
                    <Label text="Êtes-vous un nouveau client ?"
                           styleClass="form-title"
                           alignment="CENTER"/>

                    <!-- GRID ديال لحقول -->
                    <GridPane hgap="20" vgap="16">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="50"/>
                            <ColumnConstraints percentWidth="50"/>
                        </columnConstraints>

                        <!-- 1) Nom complet -->
                        <TextField GridPane.columnIndex="0" GridPane.rowIndex="0"
                                   fx:id="fullNameField"
                                   promptText="Nom complet"
                                   styleClass="form-field"/>

                        <!-- 2) Région du chantier -->
                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="0"
                                   fx:id="regionField"
                                   promptText="Région du chantier"
                                   styleClass="form-field"/>

                        <!-- 3) Adresse e-mail -->
                        <TextField GridPane.columnIndex="0" GridPane.rowIndex="1"
                                   fx:id="emailField"
                                   promptText="Adresse e-mail"
                                   styleClass="form-field"/>

                        <!-- 4) Description du projet -->
                        <TextArea GridPane.columnIndex="1" GridPane.rowIndex="1"
                                  fx:id="projectDescArea"
                                  promptText="Description du projet"
                                  prefRowCount="4"
                                  wrapText="true"
                                  styleClass="form-textarea"/>

                        <!-- 5) Numéro de téléphone -->
                        <TextField GridPane.columnIndex="0" GridPane.rowIndex="2"
                                   fx:id="phoneField"
                                   promptText="Numéro de téléphone"
                                   styleClass="form-field"/>
                    </GridPane>

                    <!-- الزر في الوسط -->
                    <HBox alignment="CENTER">
                        <Button text="Envoyer"
                                styleClass="form-submit"
                                onAction="#handleSubmit"/>
                    </HBox>

                </VBox> <!-- /form-inner -->

            </StackPane> <!-- /form-container -->
        </StackPane>
    </children>
</StackPane>
